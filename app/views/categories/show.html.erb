<p style="color: green"><%= notice %></p>

<article class="category">
  <div class="d-flex">
    <div class="image">
      <%= image_tag(@category.image) %>
    </div>
    <div class="name-date d-flex">
      <h3 class="name"><%= @category.name %></h3>
    </div>
  </div>

  <p class="date d-flex"> <%= @category.created_at.strftime('%Y') %>
    <span><%= @category.created_at.to_formatted_s(:short) %></span>
  </p>
  <div class="total-payment d-flex flex-center">
    <p class="">TOTAL PAYMENT</p>
    <p class="total-amount">Tolal: $ </p>
  </div>

  <div class="d-flex flex-center">
    <div class="action-btn">
      <%= link_to "Edit category", edit_category_path(@category) %>
    </div>
    <div class="action-btn">
      <%= button_to "Delete category", @category, method: :delete %>
    </div>
  </div>
  
  <div class="back-btn">
    <%= link_to "<<- Categories", categories_path %>
  </div>
</article>