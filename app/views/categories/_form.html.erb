<%= form_with(model: @category, url: categories_path, id: "save-categ-from") do |form| %>
  <div class="input">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, required: true, placeholder: "Name" %>
  </div>

  <strong>Upload an image...</strong>
  <div class="input">
    <%= form.file_field :image, required: true, class:"input-file"%>
  </div>
  
  <div class="d-flex">
    <div class="submit">
      <%= form.submit 'Keep'%>
    </div>
  </div>

<% end %>